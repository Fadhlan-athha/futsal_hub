<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Futsal Hub - Booking Lapangan</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Poppins', sans-serif; }
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        .cat-btn.active { background-color: #10B981; color: white; border-color: #10B981; }
    </style>
</head>
<body class="bg-gray-50 pb-32 md:pb-10">

<% if (success_msg && success_msg.length > 0) { %>
    <div id="toast-welcome" class="fixed top-24 right-5 md:right-10 z-[150] bg-white border-l-4 border-emerald-500 shadow-2xl rounded-lg p-4 flex items-center gap-4 transform transition-all duration-500 translate-x-full opacity-0">
        <div class="bg-emerald-100 w-10 h-10 rounded-full flex items-center justify-center text-emerald-600">
            <i class="fas fa-user-check text-lg"></i>
        </div>
        <div>
            <h4 class="font-bold text-gray-800 text-sm">Berhasil Masuk!</h4>
            <p class="text-xs text-gray-500"><%= success_msg %></p>
        </div>
        <button onclick="closeToast()" class="text-gray-400 hover:text-gray-600 ml-2">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const toast = document.getElementById('toast-welcome');
            
            // 1. Munculkan (Slide In)
            setTimeout(() => {
                toast.classList.remove('translate-x-full', 'opacity-0');
            }, 100);

            // 2. Hilangkan Otomatis setelah 4 detik
            setTimeout(() => {
                closeToast();
            }, 4000);
        });

        function closeToast() {
            const toast = document.getElementById('toast-welcome');
            toast.classList.add('translate-x-full', 'opacity-0');
            setTimeout(() => toast.remove(), 500); // Hapus dari DOM
        }
    </script>
<% } %>

    <nav class="hidden md:flex fixed top-0 w-full bg-white/90 backdrop-blur-md shadow-sm z-50 px-10 py-4 justify-between items-center">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-emerald-600 rounded-xl flex items-center justify-center text-white text-lg">
                <i class="fas fa-futbol"></i>
            </div>
            <span class="font-bold text-xl text-gray-800 tracking-tight">Futsal Hub</span>
        </div>
        <div class="flex gap-8 font-medium text-gray-500 text-sm">
            <a href="/" class="text-emerald-600 font-bold hover:text-emerald-700">Beranda</a>
            <a href="/history" class="hover:text-emerald-600 transition">Pesanan</a>
            <a href="/profil" class="hover:text-emerald-600 transition">Profil</a>
        <div class="flex items-center gap-3">
    <% if (user) { %>
            <div class="text-right hidden lg:block">
                <p class="text-xs text-gray-400">Halo,</p>
                <p class="text-sm font-bold text-gray-800"><%= user.nama_lengkap %></p>
            </div>
            <a href="/profil">
                <img src="https://ui-avatars.com/api/?name=<%= user.nama_lengkap %>&background=10B981&color=fff" class="w-10 h-10 rounded-full border border-gray-200 p-1 hover:scale-105 transition cursor-pointer">
            </a>
        <% } else { %>
            <a href="/login" class="text-sm font-bold text-gray-500 hover:text-emerald-600 px-4 py-2 transition">Masuk</a>
            <a href="/register" class="bg-emerald-600 text-white text-sm font-bold px-5 py-2 rounded-full hover:bg-emerald-700 transition shadow-md hover:shadow-lg transform hover:-translate-y-0.5">Daftar</a>
        <% } %>
    </div>
    </nav>

    <header class="bg-emerald-600 pt-8 pb-16 px-6 md:pt-28 md:pb-24 rounded-b-[3rem] shadow-lg relative z-10 overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
            <i class="fas fa-futbol absolute top-10 left-10 text-6xl text-white"></i>
            <i class="fas fa-running absolute bottom-20 right-20 text-8xl text-white"></i>
        </div>

        <div class="md:hidden flex justify-between items-center mb-6 text-white relative z-20">
            <div>
                <h1 class="font-bold text-xl">Halo, Pemain! üëã</h1>
                <p class="text-xs text-emerald-100">Siap cetak gol hari ini?</p>
            </div>
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" class="w-10 h-10 rounded-full bg-white/20 p-0.5 border border-white/50">
        </div>

        <div class="hidden md:block text-center text-white relative z-20 mb-8">
            <h1 class="text-4xl font-bold mb-2">Temukan Lapangan Terbaik</h1>
            <p class="text-emerald-100">Booking lapangan futsal & mini soccer dengan mudah dan cepat.</p>
        </div>

        <div class="relative z-30 max-w-4xl mx-auto">
            <form action="/" method="GET" class="bg-white p-2 rounded-full shadow-2xl flex items-center justify-between pl-6 pr-2 transition hover:shadow-emerald-900/20">
                <div class="flex items-center gap-4 w-full">
                    <div class="hidden md:flex w-10 h-10 bg-emerald-100 rounded-full items-center justify-center text-emerald-600">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="flex flex-col w-full">
                        <label class="text-[10px] md:text-xs font-bold text-gray-400 uppercase tracking-wider">Lokasi Anda</label>
                        <select name="lokasi" onchange="this.form.submit()" class="outline-none font-bold text-gray-800 text-sm md:text-base bg-transparent cursor-pointer w-full hover:text-emerald-600 transition">
                            <option value="Semua" <%= lokasi === 'Semua' ? 'selected' : '' %>>Semua Kota</option>
                            <option value="Jakarta" <%= lokasi === 'Jakarta' ? 'selected' : '' %>>Jakarta</option>
                            <option value="Bekasi" <%= lokasi === 'Bekasi' ? 'selected' : '' %>>Bekasi</option>
                            <option value="Bandung" <%= lokasi === 'Bandung' ? 'selected' : '' %>>Bandung</option>
                        </select>
                    </div>
                </div>
                <button type="button" class="bg-emerald-600 hover:bg-emerald-700 text-white w-10 h-10 md:w-12 md:h-12 rounded-full flex items-center justify-center transition transform active:scale-90 shadow-md">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </header>

    <main class="max-w-6xl mx-auto px-4 md:px-8 -mt-8 relative z-20">
        
        <div class="flex gap-3 overflow-x-auto scrollbar-hide mb-8 py-2 justify-start md:justify-center">
            <button onclick="filterLayanan('all', this)" class="cat-btn active px-6 py-2.5 bg-white text-gray-500 rounded-full text-sm font-bold shadow-md whitespace-nowrap border border-gray-100 transition hover:scale-105">üî• Semua</button>
            <button onclick="filterLayanan('Futsal', this)" class="cat-btn px-6 py-2.5 bg-white text-gray-500 rounded-full text-sm font-bold shadow-md whitespace-nowrap border border-gray-100 transition hover:scale-105">‚öΩ Futsal</button>
            <button onclick="filterLayanan('Mini Soccer', this)" class="cat-btn px-6 py-2.5 bg-white text-gray-500 rounded-full text-sm font-bold shadow-md whitespace-nowrap border border-gray-100 transition hover:scale-105">ü•Ö Mini Soccer</button>
            <button onclick="filterLayanan('Sepak Bola', this)" class="cat-btn px-6 py-2.5 bg-white text-gray-500 rounded-full text-sm font-bold shadow-md whitespace-nowrap border border-gray-100 transition hover:scale-105">üèüÔ∏è Sepak Bola</button>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6 pb-10" id="lapanganContainer">
            <% lapangan.forEach(item => { %>
                <a href="/booking/<%= item.id %>" class="lapangan-item block bg-white rounded-2xl shadow-sm hover:shadow-xl transition transform hover:-translate-y-1 duration-300 group overflow-hidden border border-gray-100" data-type="<%= item.tipe %>">
                    <div class="h-32 md:h-48 relative overflow-hidden">
                        <img src="<%= item.gambar %>" class="w-full h-full object-cover transition duration-700 group-hover:scale-110" onerror="this.src='https://via.placeholder.com/400x300'">
                        <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition"></div>
                        
                        <span class="absolute top-3 left-3 bg-white/90 backdrop-blur-sm text-emerald-700 text-[10px] font-bold px-2 py-1 rounded-lg shadow-sm flex items-center gap-1">
                            <i class="fas fa-map-marker-alt"></i> <%= item.lokasi %>
                        </span>
                        <span class="absolute bottom-3 right-3 bg-black/60 backdrop-blur-sm text-white text-[10px] px-2 py-1 rounded-lg">
                            <%= item.tipe %>
                        </span>
                    </div>
                    
                    <div class="p-4">
                        <h3 class="font-bold text-gray-800 text-sm md:text-base truncate mb-1 group-hover:text-emerald-600 transition"><%= item.nama_lapangan %></h3>
                        <p class="text-xs text-gray-400 mb-3 truncate"><%= item.deskripsi || 'Fasilitas Lengkap' %></p>
                        <div class="flex justify-between items-center">
                            <p class="text-sm md:text-lg font-bold text-emerald-600">
                                Rp <%= (item.harga/1000) %>K <span class="text-[10px] text-gray-400 font-normal">/Jam</span>
                            </p>
                            <div class="w-8 h-8 bg-gray-50 rounded-full flex items-center justify-center text-gray-400 group-hover:bg-emerald-600 group-hover:text-white transition">
                                <i class="fas fa-arrow-right text-xs"></i>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>

        <div id="emptyState" class="hidden flex flex-col items-center justify-center mt-10 opacity-50">
            <i class="fas fa-search text-4xl mb-2"></i>
            <p class="text-gray-500">Tidak ada lapangan ditemukan.</p>
        </div>
    </main>

    <nav class="md:hidden fixed bottom-0 w-full bg-white/95 backdrop-blur-lg border-t border-gray-100 flex justify-around py-4 z-50 rounded-t-[2rem] shadow-[0_-5px_15px_rgba(0,0,0,0.05)]">
        <a href="/" class="flex flex-col items-center text-emerald-600">
            <i class="fas fa-home text-xl mb-1"></i>
            <span class="text-[10px] font-bold">Beranda</span>
        </a>
        <a href="/history" class="flex flex-col items-center text-gray-400 hover:text-emerald-600 transition">
            <i class="fas fa-file-invoice text-xl mb-1"></i>
            <span class="text-[10px]">Pesanan</span>
        </a>
        <a href="/profil" class="flex flex-col items-center text-gray-400 hover:text-emerald-600 transition">
            <i class="fas fa-user text-xl mb-1"></i>
            <span class="text-[10px]">Profil</span>
        </a>
    </nav>

    <script>
        function filterLayanan(kategori, btn) {
            document.querySelectorAll('.cat-btn').forEach(b => {
                b.classList.remove('active', 'bg-emerald-600', 'text-white', 'hover:bg-emerald-700');
                b.classList.add('bg-white', 'text-gray-500');
            });
            btn.classList.remove('bg-white', 'text-gray-500');
            btn.classList.add('active', 'bg-emerald-600', 'text-white', 'hover:bg-emerald-700');

            const items = document.querySelectorAll('.lapangan-item');
            let visible = 0;
            items.forEach(item => {
                if (kategori === 'all' || item.getAttribute('data-type') === kategori) {
                    item.style.display = 'block';
                    visible++;
                } else {
                    item.style.display = 'none';
                }
            });
            document.getElementById('emptyState').classList.toggle('hidden', visible > 0);
        }
    </script>
</body>
</html>